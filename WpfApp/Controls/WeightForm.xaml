<UserControl x:Class="WpfApp.Controls.WeightForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Margin="10 10 0 10">Cyclist weight</TextBlock>
        <TextBox Grid.Column="1" Margin="10" Text="{Binding WeightFormViewModel.CyclistWeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Column="2" Margin="10 10 0 10">Bike weight</TextBlock>
        <TextBox Grid.Column="3" Margin="10" Text="{Binding WeightFormViewModel.BikeWeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Column="4" Margin="10" FontWeight="Bold" Text="{Binding WeightFormViewModel.TotalWeight, Mode=OneWay}"/>
    </Grid>
</UserControl>
